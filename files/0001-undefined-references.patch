From dfc29672b0d585eebe01ad972eb8a73bff3365f0 Mon Sep 17 00:00:00 2001
From: Vincent Hourdel <dnb771@gmail.com>
Date: Wed, 13 Jan 2016 00:43:38 +0100
Subject: [PATCH] Patching Makefiles for pop3d, imap4d and maidag

---
 imap4d/Makefile.am | 3 ++-
 maidag/Makefile.am | 3 ++-
 pop3d/Makefile.am  | 3 ++-
 3 files changed, 6 insertions(+), 3 deletions(-)

diff --git a/imap4d/Makefile.am b/imap4d/Makefile.am
index f2d0614..e91b31c 100644
--- a/imap4d/Makefile.am
+++ b/imap4d/Makefile.am
@@ -79,7 +79,8 @@ imap4d_LDADD = \
  ${MU_LIB_AUTH}\
  @MU_AUTHLIBS@ \
  ${MU_LIB_MAILUTILS}\
- @SERV_AUTHLIBS@ @MU_COMMON_LIBRARIES@ @TCPWRAP_LIBRARIES@
+ @SERV_AUTHLIBS@ @MU_COMMON_LIBRARIES@ @TCPWRAP_LIBRARIES@\
+ ${top_builddir}/lib/libmutcpwrap.a
 
 ## This kludge is necessary to correctly establish imap4d -> MU_AUTHLIBS
 ## dependencies. Automake stupidly refuses to include them.
diff --git a/maidag/Makefile.am b/maidag/Makefile.am
index e21ecce..3937955 100644
--- a/maidag/Makefile.am
+++ b/maidag/Makefile.am
@@ -51,7 +51,8 @@ maidag_LDADD = \
  @MU_COMMON_LIBRARIES@\
  $(LIBMU_DBM)\
  @DBMLIBS@\
- @TCPWRAP_LIBRARIES@
+ @TCPWRAP_LIBRARIES@\
+ ${top_builddir}/lib/libmutcpwrap.a
 
 AM_CPPFLAGS = -I${top_srcdir} @MU_APP_COMMON_INCLUDES@ @GUILE_INCLUDES@ \
  @PYTHON_INCLUDES@
diff --git a/pop3d/Makefile.am b/pop3d/Makefile.am
index 9bd5fe9..54c5776 100644
--- a/pop3d/Makefile.am
+++ b/pop3d/Makefile.am
@@ -61,7 +61,8 @@ pop3d_LDADD = \
  @MU_COMMON_LIBRARIES@\
  ${LIBMU_DBM}\
  @DBMLIBS@\
- @TCPWRAP_LIBRARIES@
+ @TCPWRAP_LIBRARIES@\
+ ${top_builddir}/lib/libmutcpwrap.a
 
 popauth_SOURCES = popauth.c
 popauth_LDADD = \
